@using FrEee.UI.Blazor.Components
@using FrEee.UI.Blazor.Components.Screens
@using Microsoft.JSInterop
@inherits ViewBase<MainMenuViewModel>

<div class="main-menu container-fluid h-100">
    <div class="row h-100">
        <div class="col-8 d-flex align-items-center justify-content-center">
            <img src="images/main-menu-splash.png" alt="FrEee" class="img-fluid splash-image" />
        </div>
        <div class="col-4 d-flex flex-column justify-content-center align-items-center button-panel">
            <button class="btn btn-outline-primary mb-2 w-75" @onclick='() => AlertStub("Mods")'>Mods</button>
            <button class="btn btn-outline-primary mb-2 w-75" @onclick='() => AlertStub("New Game")'>New Game</button>
            <button class="btn btn-outline-primary mb-2 w-75" @onclick='() => AlertStub("Quick Start")'>Quick Start</button>
            <button class="btn btn-outline-primary mb-2 w-75" @onclick='() => AlertStub("Resume Game")'>Resume Game</button>
            <button class="btn btn-outline-primary mb-2 w-75" @onclick='() => AlertStub("Load Game")'>Load Game</button>
            <button class="btn btn-outline-primary mb-2 w-75" @onclick='() => AlertStub("Scenario")'>Scenario</button>
            <button class="btn btn-outline-primary mb-2 w-75" @onclick='() => AlertStub("Options")'>Options</button>
            <button class="btn btn-outline-primary mb-2 w-75" @onclick='() => AlertStub("Credits")'>Credits</button>
            <button class="btn btn-outline-danger mt-4 w-75" @onclick='() => AlertStub("Quit")'>Quit</button>
        </div>
    </div>
</div>

<style>
    .main-menu {
        background-color: black;
        color: cornflowerblue;
    }
    .splash-image {
        max-height: 90vh;
    }
    .button-panel {
        background-color: rgba(0, 0, 0, 0.5);
    }
    .btn-outline-primary {
        color: cornflowerblue;
        border-color: cornflowerblue;
    }
    .btn-outline-primary:hover {
        background-color: cornflowerblue;
        color: black;
    }
</style>
